<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GuildCars</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @RenderSection("map")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Guild Cars", "Index","Home")</li>
                <li>@Html.ActionLink("New Inventory", "NewInventory", "Home")</li>
                <li>@Html.ActionLink("Used Inventory", "UsedInventory", "Home")</li>
                <li>@Html.ActionLink("Specials", "Specials", "Home")</li>
                <li>@Html.ActionLink("Contact", "ContactUs", "Home")</li>
                @if (User.IsInRole("admin"))
                {
                    <li>@Html.ActionLink("Sales", "SalesIndex", "Sales")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Admin
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" id="management">
                            <li>
                                @Html.ActionLink("Vehicles", "AdminIndex", "Admin")
                            </li>
                            <li>
                                @Html.ActionLink("Add New Vehicle", "AddVehicle", "Admin")
                            </li>
                            <li>
                                @Html.ActionLink("View/Add Makes", "Makes", "Admin")
                            </li>
                            <li>
                                @Html.ActionLink("View/Add Model", "Models", "Admin")
                            </li>
                            <li>
                                @Html.ActionLink("Manage Users", "Users", "Admin")
                            </li>
                            @*<li>
                                @Html.ActionLink("Manage Specials", "ManageSpecials", "Admin")
                            </li>
                            <li>
                                @Html.ActionLink("Reports", "Reports", "Admin")
                            </li>*@
                            <li>
                                @Html.ActionLink("Change Password", "ChangePassword", "Sales")
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "Logout", "Home")
                            </li>
                        </ul>
                    </li>
                }
                else if (User.IsInRole("sales"))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Sales
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" id="management">
                            <li>
                                @Html.ActionLink("Sales", "SalesIndex", "Sales")
                            </li>
                            <li>    
                                @Html.ActionLink("Change Password", "ChangePassword", "Sales")
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "Logout", "Home")
                            </li>
                        </ul>
                    </li>
                }
            </ul>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts")
</body>
</html>