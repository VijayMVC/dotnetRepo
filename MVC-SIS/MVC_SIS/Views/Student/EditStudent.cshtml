@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Edit Student</h3>
                <div class="row">
                    @using (Html.BeginForm("EditStudent", "Student", FormMethod.Post))
                    {
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        @Html.HiddenFor(m => m.Student.StudentId)
                                    </div>
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", Placeholder = Model.Student.FirstName })
                                        @Html.ValidationMessageFor(m => m.Student.FirstName)
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", Placeholder = Model.Student.LastName })
                                        @Html.ValidationMessageFor(m => m.Student.LastName)
                                    </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control", Placeholder = Model.Student.Address.Street1 })
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control", Placeholder = Model.Student.Address.Street2 })
                                        </div>
                                        <div class="form-group">
                                        <label>State:</label>
                                        @Html.DropDownListFor(m => m.Student.Address.State.StateName, Model.StateItems, Model.Student.Address.State.StateName, new {@class = "form-control"})
                                        <div class="form-group">
                                            <label>City</label>
                                            @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control", Placeholder = Model.Student.Address.City })
                                        </div>
                                        <div class="form-group">
                                            <label>Postal Code</label>
                                            @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control", Placeholder = Model.Student.Address.PostalCode })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, new { @class = "form-control", Selected = Model.Student.Major.MajorName })
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", Placeholder = Model.Student.GPA})
                                        @Html.ValidationMessageFor(m => m.Student.GPA)
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @for (int i = 0; i < Model.CourseItems.Count; i++)
                                        {
                                            <p>
                                                @Html.CheckBoxFor(m => m.CourseItems[i].Selected)
                                                <span>@Model.CourseItems[i].Text</span>
                                                @Html.HiddenFor(m => m.CourseItems[i].Value)
                                            </p>
                                        }
                                    </div>
                                    <input type="submit" value="Submit Form" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


